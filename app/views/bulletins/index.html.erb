<p id="notice"><%= notice %></p>

<h1>Bulletins</h1>

<table>
  <thead>
    <tr>
      <th style="width:20%">Title</th>
      <th style="width:50%">Description</th>
      <th colspan="3">Data actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bulletins.each do |bulletin| %>
      <tr>
        <td><%= bulletin.title %></td>
        <td><%= bulletin.description %></td>
        <td>
          <%= link_to '수정', edit_bulletin_path(bulletin), class: 'btn btn-default'  %>
          <%= link_to '삭제', bulletin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default'  %>
          <%= link_to '글 보기', bulletin_boards_path(bulletin), class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bulletin', new_bulletin_path, class: 'btn btn-default' %>
