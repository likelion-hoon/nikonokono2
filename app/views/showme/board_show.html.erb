<!-- navbar의 끝 -->

  <div class="container" style="margin-top:80px">
    <h1 style="text-align:center;margin-bottom:50px"> Show me the Coin </h1>

    <table class="table table-condensed borderless">
      <tr>
        <td ><label> 글 번호 </label></td>
        <td colspan="2"> <%= @post.id %> </td>
      </tr>

      <tr>
        <td ><label> 글 제목 </label></td>
        <td colspan="3"><%= @post.title %></td>
      </tr>

      <tr>
        <td ><label> 글 내용 </label> </td>
        <td colspan="3"> <%= @post.content %></td>
      </tr>

      <tr>
        <td><label> 가수 이름 </label></td>
        <td><%= @post.singer %></td>
        <td><label> 노래 제목 </label></td>
        <td><%= @post.song %></td>
      </tr>

      <tr>
        <td><span class="glyphicon glyphicon-thumbs-up"></span></td>
        <td colspan="3"> <%= @post.recom %> </td>
      </tr>
      <tr>

      <tr>
        <td><label> 노래 듣기 </label></td>
        <td colspan="3">
          <audio controls><source src="나의여백.mp3" type="audio/mpeg"></audio>
        </td>
      </tr>
      <tr>
    </table>


    <!-- 댓글을 구현하는 부분 -->
    <div class="well">

    </div>
